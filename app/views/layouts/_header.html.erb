              <% end %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Cuenta <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Perfil", current_user %></li>
                  <li><%= link_to "Ajustes", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
