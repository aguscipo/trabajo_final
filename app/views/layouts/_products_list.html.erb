<% if @products.any? %>
	<% if logged_in? && current_user.admin? %>
		<p><%= link_to "Nuevo producto", new_product_path, class: "btn btn-lg btn-primary" %></p>
	<%end%>
  <h3>Productos (<%= @products.count %>)</h3>
  <%= will_paginate @products %>
    <div class="row">
			<div class="col-md-2">
				<% if !@trademarks.nil? && @trademarks.count > 1 %>
					</br>
					<strong>Marcas</strong>
		      <% @trademarks.each do |trademark| %>
		        </br>
		        <%= link_to search_by_trademark_path(:trademark => trademark,:category => @category) do %>
		          <%=trademark.name %>
		        <% end %>
					<% end %>
				<% end %>
				</br></br>
				<strong>Rango de precios</strong>

    	</div>

			<div class="col-md-10">
					<table class="table table-hover">
							<thead>
									<tr>
											<th>Producto</th>
											<th class="text-center">Precio</th>
											<th> </th>
									</tr>
							</thead>
							<tbody>
							<% @products.each do |product| %>
								<%= render product %>
							<% end %>
							</tbody>
					</table>
			</div>
    </div>

  <%= will_paginate @products %>
<% end %>
