<% provide(:title, @product.name) %>
<div class="row">
	<div class="col-lg-3">
		<%= image_tag @product.picture.url,:class => "product-show-image" if @product.picture? %>
	</div>
	<div class="col-lg-5" , style="text-align:left">
		<h1> <%=@product.name%> </h1>
		<p> Precio: $<%=@product.price%></p>
		<p> Descripción: <%=@product.description%></p>
		<p> Marca: <%=Trademark.find(@product.trademark_id).name%></p>
		<p> Categoría: <%=Category.find(@product.category_id).name%></p>
	</div>
</div>
<%= link_to "Comprar", new_payment_path, class: "btn btn-lg btn-success" %>
